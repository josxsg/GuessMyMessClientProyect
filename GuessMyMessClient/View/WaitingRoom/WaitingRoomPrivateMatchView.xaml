<Window x:Class="GuessMyMessClient.View.WaitingRoom.WaitingRoomPrivateMatchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.WaitingRoom"
        mc:Ignorable="d"
        Title="Waiting Room - Private Player" Height="650" Width="950" 
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.WaitingRoom"
        xmlns:lang="clr-namespace:GuessMyMessClient.Properties.Langs"
        xmlns:session="clr-namespace:GuessMyMessClient.ViewModel.Session"
        d:DataContext="{d:DesignInstance Type=vm:WaitingRoomPrivateMatchViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        xmlns:converters="clr-namespace:GuessMyMessClient.ViewModel.Support.Converters">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="KickButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFEF5350"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border CornerRadius="8" Background="#C62828" Margin="0,3,0,0"/>
                            <Border CornerRadius="8" Background="{TemplateBinding Background}" Margin="0,0,0,3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PredefinedMessageButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF03A9F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Border x:Name="shadow" CornerRadius="15" Background="#FF0277BD" Margin="0,3,0,0"/>
                            <Border x:Name="face" CornerRadius="15" Background="{TemplateBinding Background}" Margin="0,0,0,3">
                                <Grid>
                                    <TextBlock Text="💬" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#80FFFFFF"/>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="face" Property="Background" Value="#FF29B6F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="face" Property="Margin" Value="0,3,0,0"/>
                                <Setter TargetName="shadow" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" 
                Background="#CC000000" 
                CornerRadius="20" 
                Margin="30,20" 
                Padding="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                MaxWidth="500">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.4" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="{Binding MatchName}" 
                           FontFamily="Arial Rounded MT Bold"
                           FontSize="32" FontWeight="Normal" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Direction="320" Color="#333333" Opacity="0.8" BlurRadius="2"/>
                    </TextBlock.Effect>
                </TextBlock>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,10" Visibility="{Binding MatchCodeVisibility}">
                    <TextBlock Text="{x:Static lang:Lang.globalLbMatchCode}" FontFamily="Arial Rounded MT Bold" FontSize="20" Foreground="#FFFFC107" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Border Background="#33FFFFFF" CornerRadius="8" Padding="10,2" Margin="10,0,0,0">
                        <TextBlock Text="{Binding MatchCode}" FontFamily="Arial Rounded MT Bold" FontSize="20" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <Border Background="#44FFFFFF" CornerRadius="10" HorizontalAlignment="Left" Padding="10,4" Margin="0,0,0,15" Visibility="{Binding MatchCodeVisibility}">
                    <TextBlock Text="{x:Static lang:Lang.waitingRoomLbMatchTypePrivate}" FontFamily="Arial Rounded MT Bold" FontSize="14" Foreground="White" FontWeight="Bold"/>
                </Border>

                <TextBlock Margin="0,5,0,0" FontSize="20" FontFamily="Arial Rounded MT Bold" Foreground="White">
                    <Run Text="{x:Static lang:Lang.globalLbHost}" Foreground="#FFFFC107"/> <Run Text=": " Foreground="#FFFFC107"/>
                    <Run Text="{Binding HostUsername}"/>
                </TextBlock>

                <TextBlock Margin="0,8,0,0" FontSize="20" FontFamily="Arial Rounded MT Bold" Foreground="White">
                    <Run Text="{x:Static lang:Lang.globalLbDifficulty}" Foreground="#FF42A5F5"/> <Run Text=": " Foreground="#FF42A5F5"/>
                    <Run Text="{Binding Difficulty}"/>
                </TextBlock>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Ellipse Width="15" Height="15" Fill="#FF66E070" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding PlayerCountDisplay}" FontFamily="Arial Rounded MT Bold" FontSize="22" FontWeight="Bold" Foreground="#FF66E070"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Grid.Column="0" Margin="30,0,30,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#AA000000" CornerRadius="5" Padding="5" Margin="0,0,0,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Name="ChatScrollViewer">
                    <ItemsControl ItemsSource="{Binding ChatMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type session:ChatMessageDisplay}">
                                <TextBlock Text="{Binding FormattedMessage}" FontFamily="Arial Rounded MT Bold" FontSize="15" Foreground="White" TextWrapping="Wrap" Margin="0,4">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="1.5" Direction="320" Color="Black" Opacity="0.6" BlurRadius="2"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Button Content="{x:Static lang:Lang.chatMsgExcited}" Style="{StaticResource PredefinedMessageButtonStyle}"
                        Command="{Binding SendMessageCommand}" CommandParameter="chatMsgExcited" Height="20" Width="404"/>
                <Button Content="{x:Static lang:Lang.chatMsgLetsGo}" Style="{StaticResource PredefinedMessageButtonStyle}"
                        Command="{Binding SendMessageCommand}" CommandParameter="chatMsgLetsGo" Height="20" Width="404"/>
                <Button Content="{x:Static lang:Lang.chatMsgStartGame}" Style="{StaticResource PredefinedMessageButtonStyle}"
                        Command="{Binding SendMessageCommand}" CommandParameter="chatMsgStartGame" Height="20" Width="404"/>
                <Button Content="{x:Static lang:Lang.chatMsgReady}" Style="{StaticResource PredefinedMessageButtonStyle}"
                        Command="{Binding SendMessageCommand}" CommandParameter="chatMsgReady" Height="20" Width="404"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" 
                Background="#CC000000" 
                CornerRadius="20" 
                Padding="20" 
                Margin="10,20,30,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.4" BlurRadius="15"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="👥" FontSize="24" Foreground="#FF42A5F5" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static lang:Lang.globalLbPlayers}" FontFamily="Arial Rounded MT Bold" FontSize="24" FontWeight="Normal" Foreground="White">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" Direction="320" Color="#333333" Opacity="0.8" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Players}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:PlayerViewModel}">
                                <Border Background="#33FFFFFF" CornerRadius="12" Padding="12,8" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Username}" FontFamily="Arial Rounded MT Bold" FontSize="16" Foreground="White" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="5,0,10,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,30">

            <Button Content="{x:Static lang:Lang.globalBtnLeave}"
                    Style="{StaticResource LeaveButtonStylee}" 
                    FontSize="24" Width="180" Height="50" Margin="10"
                    Command="{Binding LeaveCommand}"/>

            <Label Content="{Binding CountdownValue}" 
                   Style="{StaticResource TimerStyle}"
                   Visibility="{Binding CountdownVisibility}"
                   Margin="20,0,0,0"/>
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="2"
        Style="{StaticResource InviteButtonStyle}"
        Command="{Binding InviteCommand}"
        HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Margin="0,0,30,30" Height="45" Width="210">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📩" Margin="0,0,8,0"/>
                <TextBlock Text="{x:Static lang:Lang.socialLbEmailInvitation}"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>