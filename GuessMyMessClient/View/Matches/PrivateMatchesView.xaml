<Window x:Class="GuessMyMessClient.View.Matches.PrivateMatchesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.Matches"
        mc:Ignorable="d"
        Title="PrivateMatches" Height="550" Width="900"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Matches"
        d:DataContext="{d:DesignInstance Type=vm:PrivateMatchesViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Content="←" 
                Style="{StaticResource ReturnButtonStyle}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="15,15,0,0"
                Command="{Binding ReturnCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                ToolTip="{x:Static language:Lang.globalBtnReturn}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
            <Button Content="—" Width="30" Height="30" Margin="5" Style="{StaticResource BlueButton}"
                    Command="{Binding MinimizeWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    ToolTip="{x:Static language:Lang.globalBtnMinimize}"/>

            <Button Content="☐" Width="30" Height="30" Margin="5" Style="{StaticResource GreenButton}"
                    Command="{Binding MaximizeWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    ToolTip="{x:Static language:Lang.globalBtnResize}"/>

            <Button Content="X" Width="30" Height="30" Margin="5" Style="{StaticResource RedButton}"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    ToolTip="{x:Static language:Lang.globalBtnClose}"/>
        </StackPanel>

        <Border Background="#F0F0F0" CornerRadius="12" Padding="15" Margin="89,70,89,70">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="{x:Static language:Lang.playMenuBtnPublicMatches}" 
                            Style="{StaticResource TabButton}" 
                            Margin="0,0,2,0"
                            Command="{Binding PublicMatchesCommand}"/>

                    <Button Grid.Column="1" 
                            Content="{x:Static language:Lang.playMenuBtnPrivateMatches}" 
                            Style="{StaticResource SelectedTabButton}" 
                            Margin="2,0,0,0"/>
                </Grid>

                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="476">

                    <TextBlock 
                        Text="{x:Static language:Lang.globalLbMatchCode}"
                        FontSize="30" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Center"/>

                    <TextBlock 
                        Text="{x:Static language:Lang.privateMatchesLbCodeMessage}"
                        FontSize="20" 
                        HorizontalAlignment="Center"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        Margin="0,15,0,0"/>

                    <Border BorderBrush="Black"
                            BorderThickness="3"
                            CornerRadius="8"
                            Padding="10,5"
                            Background="White"
                            HorizontalAlignment="Center"
                            Width="476" 
                            Height="60"
                            Margin="0,30,0,0">

                        <TextBlock Text="****-****-****"
                                   Foreground="Gray"
                                   FontSize="40"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <Button 
                        Content="{x:Static language:Lang.globalBtnJoin}" 
                        Style="{StaticResource JoinButton}" 
                        FontSize="30"
                        Height="41"
                        Margin="0,50,0,0"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>