<Window x:Class="GuessMyMessClient.View.Matches.PrivateMatchesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.Matches"
        mc:Ignorable="d"
        Title="PrivateMatches" Height="550" Width="900"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Matches"
        d:DataContext="{d:DesignInstance Type=vm:PrivateMatchesViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Grid.Row="0" Background="#F0F0F0" CornerRadius="12" Padding="5" Margin="89,70,89,417">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" 
                        Content="{x:Static language:Lang.playMenuBtnPublicMatches}" 
                        Style="{StaticResource TabButton}" 
                        Margin="0,0,2,0"/>

                <Button Grid.Column="1" 
                        Content="{x:Static language:Lang.playMenuBtnPrivateMatches}" 
                        Style="{StaticResource SelectedTabButton}" 
                        Margin="2,0,0,0"/>

            </Grid>
        </Border>

        <TextBlock 
            Text="{x:Static language:Lang.globalLbMatchCode}"
            FontSize="30" 
            FontWeight="Bold" 
            Margin="321,151,317,332"/>

        <TextBlock 
            Text="{x:Static language:Lang.privateMatchesLbCodeMessage}"
            FontSize="20" 
            Margin="279,207,246,276"/>

        <Border BorderBrush="Black"
        BorderThickness="3"
        CornerRadius="8"
        Padding="10,5"
        Background="White"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Width="476" Margin="0,286,0,0" Height="60">

            <TextBlock Text="****-****-****"
               Foreground="Gray"
               FontSize="40"
               VerticalAlignment="Top" Margin="106,-1,108,0"/>

        </Border>

        <Button 
        Content="{x:Static language:Lang.globalBtnJoin}" 
        Style="{StaticResource JoinButton}" 
        FontSize="30"
        VerticalAlignment="Top" Margin="360,413,360,0" Height="41"/>
    </Grid>
</Window>