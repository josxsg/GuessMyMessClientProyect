<Window x:Class="GuessMyMessClient.View.Matches.MatchesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.Matches"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Matches"
        d:DataContext="{d:DesignInstance Type=vm:MatchesViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="Unirse a Partida" Height="550" Width="900"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Content="←" 
                Style="{StaticResource ReturnButtonStyle}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="15,15,0,0"
                Command="{Binding ReturnCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                ToolTip="{x:Static language:Lang.globalBtnReturn}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
        </StackPanel>

        <Border Background="#F0F0F0" CornerRadius="12" Padding="15" Margin="89,70,89,70">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="{x:Static language:Lang.playMenuBtnPublicMatches}"
                            Command="{Binding ShowPublicMatchesCommand}"
                            Margin="0,0,2,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPublicViewSelected}" Value="True">
                                        <Setter Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="1"
                            Content="{x:Static language:Lang.playMenuBtnPrivateMatches}"
                            Command="{Binding ShowPrivateMatchesCommand}"
                            Margin="2,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPublicViewSelected}" Value="False">
                                        <Setter Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" 
                      Visibility="{Binding IsPublicViewSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="{x:Static language:Lang.playMenuLbAvailableMatches}"
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,20,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding PublicMatches}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#CCCCCC" 
                                            BorderThickness="1.5" 
                                            CornerRadius="8" 
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                                <TextBlock Text="{Binding MatchName}" FontSize="20" FontWeight="Bold"/>

                                                <Grid Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" HorizontalAlignment="Left">
                                                        <Run Text="{x:Static language:Lang.globalLbHost}" FontWeight="SemiBold"/>:
                                                        <Run Text="{Binding HostUsername}"/>
                                                    </TextBlock>

                                                    <TextBlock Grid.Column="1" HorizontalAlignment="Center">
                                                        <Run Text="{x:Static language:Lang.globalLbPlayers}" FontWeight="SemiBold"/>:
                                                        <Run Text="{Binding CurrentPlayers}"/>/<Run Text="{Binding MaxPlayers}"/>
                                                    </TextBlock>

                                                    <TextBlock Grid.Column="2" HorizontalAlignment="Right">
                                                        <Run Text="{x:Static language:Lang.globalLbDifficulty}" FontWeight="SemiBold"/>:
                                                        <Run Text="{Binding DifficultyName}"/>
                                                    </TextBlock>
                                                </Grid>
                                            </StackPanel>

                                            <Button Grid.Column="1" 
                                                    Content="{x:Static language:Lang.globalBtnJoin}" 
                                                    Style="{StaticResource JoinButton}" 
                                                    VerticalAlignment="Center" 
                                                    Margin="0"
                                                    Command="{Binding DataContext.JoinPublicMatchCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding MatchId}"
                                                    IsEnabled="{Binding CanJoin}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="476"
                            Visibility="{Binding IsPublicViewSelected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">

                    <TextBlock 
                            Text="{x:Static language:Lang.globalLbMatchCode}"
                            FontSize="30" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"/>

                    <TextBlock 
                            Text="{x:Static language:Lang.privateMatchesLbCodeMessage}"
                            FontSize="20" 
                            HorizontalAlignment="Center"
                            TextWrapping="Wrap"
                            TextAlignment="Center"
                            Margin="0,15,0,0"/>

                    <TextBox
                            Text="{Binding MatchCode, UpdateSourceTrigger=PropertyChanged}"
                            Height="60"
                            Width="476"
                            FontSize="40"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,30,0,0" Style="{StaticResource TextBox}"/>

                    <Button 
                            Content="{x:Static language:Lang.globalBtnJoin}" 
                            Style="{StaticResource JoinButton}" 
                            FontSize="30"
                            Height="41"
                            Margin="0,50,0,0"
                            Command="{Binding JoinPrivateMatchCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>