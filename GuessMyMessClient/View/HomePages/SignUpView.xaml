<Window x:Class="GuessMyMessClient.View.HomePages.SignUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.HomePages"
        mc:Ignorable="d"
        xmlns:helpers="clr-namespace:GuessMyMessClient.ViewModel.Support" 
        xmlns:language="clr-namespace:GuessMyMessClient.Properties.Langs"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.HomePages"
        d:DataContext="{d:DesignInstance Type=vm:SignUpViewModel, IsDesignTimeCreatable=True}"
        Title="Sign Up" Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowState="Maximized"
        WindowStyle="None">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
            <Button Content="—" Width="30" Height="30" Margin="5" Style="{StaticResource BlueButton}"
                    Command="{Binding MinimizeWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="{x:Static language:Lang.globalBtnMinimize}"/>
            <Button Content="☐" Width="30" Height="30" Margin="5" Style="{StaticResource GreenButton}"
                    Command="{Binding MaximizeWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="{x:Static language:Lang.globalBtnResize}"/>
            <Button Content="X" Width="30" Height="30" Margin="5" Style="{StaticResource RedButton}"
                    Command="{Binding CloseWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="{x:Static language:Lang.globalBtnClose}"/>
        </StackPanel>

        <Button Content="←" Style="{StaticResource ReturnButtonStyle}"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0"
                Command="{Binding ReturnCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                ToolTip="{x:Static language:Lang.globalBtnReturn}"/>

        <Viewbox Stretch="Uniform" MaxWidth="850">
            <StackPanel Width="960">

                <Border Style="{StaticResource GlassTitleBorder}">
                    <TextBlock Text="{x:Static language:Lang.signUpLbResgister}" 
               Style="{StaticResource GlassTitleText}"/>
                </Border>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="15">

                        <Border Style="{StaticResource FormLabelBorder}">
                            <TextBlock Text="{x:Static language:Lang.globalTxtName}" Style="{StaticResource FormLabelText}"/>
                        </Border>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}" Height="50" Margin="0,0,0,15"/>

                        <Border Style="{StaticResource FormLabelBorder}">
                            <TextBlock Text="{x:Static language:Lang.globalTxtUsername}" Style="{StaticResource FormLabelText}"/>
                        </Border>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}" Height="50" Margin="0,0,0,15"/>

                        <Border Style="{StaticResource FormLabelBorder}">
                            <TextBlock Text="{x:Static language:Lang.globalTxtEmail}" Style="{StaticResource FormLabelText}"/>
                        </Border>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}" Height="50" Margin="0,0,0,15"/>
                    </StackPanel>

                    <Grid Grid.Column="1" VerticalAlignment="Top" Margin="10,60" Width="160" Height="160">

                        <ContentControl Style="{StaticResource AvatarFrame3D}">
                            <Image Source="{Binding SelectedAvatarImage}" Stretch="Uniform" Margin="25"/>
                        </ContentControl>

                        <Button Style="{StaticResource EditButtonStyle}" 
            Width="45" Height="45" 
            VerticalAlignment="Bottom" 
            HorizontalAlignment="Right" 
            Margin="0,0,-5,-5"
            Command="{Binding SelectAvatarCommand}" 
            ToolTip="{x:Static language:Lang.editAvatarLbSelect}"/>
                    </Grid>
                    
                    <StackPanel Grid.Column="2" Margin="15">

                        <Border Style="{StaticResource FormLabelBorder}">
                            <TextBlock Text="{x:Static language:Lang.globalLbLastName}" Style="{StaticResource FormLabelText}"/>
                        </Border>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputField}" Height="50" Margin="0,0,0,15"/>

                        <Border Style="{StaticResource FormLabelBorder}">
                            <TextBlock Text="{x:Static language:Lang.globalLbGender}" Style="{StaticResource FormLabelText}"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,15">

                            <RadioButton GroupName="Gender" 
                 IsChecked="{Binding IsMale}" 
                 Style="{StaticResource GenderRadioButtonStyle}" 
                 ToolTip="{x:Static language:Lang.globalCmbMale}" 
                 Width="55">
                                <Image Source="/Resources/Images/male.png" Height="28"/>
                            </RadioButton>

                            <RadioButton Content="{x:Static language:Lang.globalCmbNonBinary}" 
                 GroupName="Gender" 
                 IsChecked="{Binding IsNonBinary}" 
                 Style="{StaticResource GenderRadioButtonStyle}"/>

                            <RadioButton GroupName="Gender" 
                 IsChecked="{Binding IsFemale}" 
                 Style="{StaticResource GenderRadioButtonStyle}" 
                 ToolTip="{x:Static language:Lang.globalCmbFemale}" 
                 Width="55">
                                <Image Source="/Resources/Images/female.png" Height="28"/>
                            </RadioButton>

                        </StackPanel>
                        <Border Style="{StaticResource FormLabelBorder}">
                            <TextBlock Text="{x:Static language:Lang.globalPwdPassword}" Style="{StaticResource FormLabelText}"/>
                        </Border>
                        <PasswordBox helpers:PasswordBoxHelper.Attach="True"
                                     helpers:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource PasswordField}" Height="50" Margin="0,0,0,15"/>
                    </StackPanel>
                </Grid>

                <Button Content="{x:Static language:Lang.globalBtnSignUp}" Style="{StaticResource YellowButton}" Width="280" Height="55" Margin="0,30,0,0" HorizontalAlignment="Center" FontSize="22"
                        Command="{Binding SignUpCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>