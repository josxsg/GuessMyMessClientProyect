<Window x:Class="GuessMyMessClient.View.HomePages.GuestLoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:GuessMyMessClient.Properties.Langs"
        Title="Ingreso Invitado" Height="550" Width="900"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize" 
        WindowState="Maximized"
        WindowStyle="None">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Content="←" Style="{StaticResource ReturnButtonStyle}"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0"
                Command="{Binding BackCommand}" 
                ToolTip="{x:Static language:Lang.globalBtnReturn}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
            <Button Content="—" Width="30" Height="30" Margin="5" Style="{StaticResource BlueButton}"
                    Command="{Binding MinimizeWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="{x:Static language:Lang.globalBtnMinimize}"/>

            <Button Content="☐" Width="30" Height="30" Margin="5" Style="{StaticResource GreenButton}"
                    Command="{Binding MaximizeWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="{x:Static language:Lang.globalBtnResize}"/>

            <Button Content="X" Width="30" Height="30" Margin="5" Style="{StaticResource RedButton}"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="{x:Static language:Lang.globalBtnClose}"/>
        </StackPanel>

        <Viewbox Stretch="Uniform" MaxWidth="600">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">

                <Border Style="{StaticResource GlassTitleBorder}">
                    <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                        <TextBlock Text="{x:Static language:Lang.welcomeBtnCotinueAsGuest}" 
                                   Style="{StaticResource GlassTitleText}"
                                   FontSize="32"/>
                    </Viewbox>
                </Border>

                <Border Style="{StaticResource FormLabelBorder}">
                    <TextBlock Text="{x:Static language:Lang.globalTxtEmail}" Style="{StaticResource FormLabelText}"/>
                </Border>
                <TextBox Text="{Binding Email}" 
                         Style="{StaticResource InputField}"
                         Height="50" Margin="0,0,0,25"/>

                <Border Style="{StaticResource FormLabelBorder}">
                    <TextBlock Text="{x:Static language:Lang.globalLbMatchCode}" Style="{StaticResource FormLabelText}"/>
                </Border>
                <TextBox Text="{Binding InvitationCode}" 
                         Style="{StaticResource InputField}"
                         Height="50" Margin="0,0,0,40"/>

                <Button Command="{Binding LoginGuestCommand}" 
                        Content="{x:Static language:Lang.globalBtnLogIn}" 
                        Style="{StaticResource GreenButton}"
                        Height="55" Width="250" FontSize="22"
                        HorizontalAlignment="Center"/>

            </StackPanel>
        </Viewbox>
    </Grid>
</Window>