<Window x:Class="GuessMyMessClient.View.Match.AnswersScreenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.Match"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="AnswersScreenView" Height="550" Width="900"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Match"
        d:DataContext="{d:DesignInstance Type=vm:AnswersScreenViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        xmlns:language="clr-namespace:GuessMyMessClient.Properties.Langs"
        WindowState="Maximized"
        WindowStyle="None">

    <Window.Resources>
        <DataTemplate x:Key="PlayerListItemTemplate">
            <Border Background="#F5F5F5" CornerRadius="8" Padding="10,5" Margin="0,2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Username}" FontSize="14" FontFamily="Arial Rounded MT Bold" Foreground="#333" />
                    <TextBlock Text=" - " Foreground="#777"/>
                    <TextBlock Text="{Binding Score}" FontSize="14" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Foreground="#2E7D32" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ChatMessageItemTemplate">
            <Border Background="White" CornerRadius="8" Padding="8,5" Margin="0,2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Sender}" FontWeight="Bold" FontFamily="Arial Rounded MT Bold" Foreground="#1565C0" />
                    <TextBlock Text=": " Foreground="#555"/>
                    <TextBlock Text="{Binding Message}" FontFamily="Arial" Foreground="#333" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style x:Key="AnswerTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Direction="315" Color="Black" Opacity="0.25" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#CC000000" CornerRadius="0,20,20,0" Padding="20" Margin="0,20,0,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.4" BlurRadius="15"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.answersPanelLbOwner}"
                           FontSize="20" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Foreground="White" Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.6" BlurRadius="2"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Grid.Row="1" Text="{Binding DrawingArtistName}" 
                           FontSize="24" FontFamily="Arial Rounded MT Bold" FontWeight="Black" Foreground="#FFC107" Margin="0,0,0,20">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.5" BlurRadius="2"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Grid.Row="2" Text="{x:Static language:Lang.globalLbPlayers}"
                           FontSize="18" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>

                <Border Grid.Row="3" Background="#33FFFFFF" CornerRadius="10" Padding="5" Margin="0,0,0,20">
                    <ListBox ItemsSource="{Binding PlayerList}"
                             ItemTemplate="{StaticResource PlayerListItemTemplate}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Border>

                <TextBlock Grid.Row="4" Text="Chat"
                           FontSize="18" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>

                <Border Grid.Row="5" Background="#33FFFFFF" CornerRadius="10" Padding="5" Margin="0,0,0,10">
                    <ListBox x:Name="ChatListBox" ItemsSource="{Binding ChatMessages}"
                             ItemTemplate="{StaticResource ChatMessageItemTemplate}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Border>

                <Grid Grid.Row="6" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding NewChatMessage, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputField}"
                             Width="{x:Static sys:Double.NaN}" 
                             HorizontalAlignment="Stretch"
                             Height="40" 
                             Margin="0,0,10,0"/>

                    <Button Grid.Column="1"
                            Content="{x:Static language:Lang.globalBtnSend}" 
                            Command="{Binding SendMessageCommand}"
                            Style="{StaticResource JoinButton}" 
                            FontSize="14"
                            Width="70" Height="40"/>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.3" BlurRadius="20"/>
                </Border.Effect>
                <Grid ClipToBounds="True">
                    <InkCanvas IsEnabled="False" 
                               Background="Transparent"
                               Strokes="{Binding CurrentDrawingStrokes}">
                        <InkCanvas.Clip>
                            <RectangleGeometry Rect="0,0,2000,2000" RadiusX="15" RadiusY="15"/>
                        </InkCanvas.Clip>
                    </InkCanvas>
                </Grid>
            </Border>

            <Border Grid.Row="1" Style="{StaticResource GlassTitleBorder}" Padding="20,5" Margin="0,20,0,10" HorizontalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.answersScreenLbAnswers}" Style="{StaticResource GlassTitleText}" FontSize="24"/>
            </Border>

            <Border Grid.Row="2" 
                    Background="White" 
                    Margin="0,5,0,0" 
                    CornerRadius="15"
                    Padding="30,15"
                    HorizontalAlignment="Center"
                    BorderBrush="{Binding CurrentGuessColor}" 
                    BorderThickness="4">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.2" BlurRadius="10"/>
                </Border.Effect>

                <TextBlock Text="{Binding CurrentDisplayedGuess}"
                           Foreground="{Binding CurrentGuessColor}" 
                           Style="{StaticResource AnswerTextStyle}"/>
            </Border>
        </Grid>

    </Grid>
</Window>