<Window x:Class="GuessMyMessClient.View.Match.EndOfMatchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.Match"
        mc:Ignorable="d"
        Title="EndOfMatchView" Height="450" Width="800"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Match"
        d:DataContext="{d:DesignInstance Type=vm:EndOfMatchViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{x:Static language:Lang.winnersScreenLbTitleEndMatch}"
                   FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock FontSize="20" >
                <Run Text="{x:Static language:Lang.winnersScreenLbCongrats}"/>
                <Run Text=":"/>
            </TextBlock>

            <TextBlock Text="{Binding WinnerName}"
                       FontSize="20" FontWeight="Bold"
                       Foreground="DarkGoldenrod"
                       Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,10">

            <StackPanel VerticalAlignment="Bottom" >
                <TextBlock Text="{Binding SecondPlacePlayerName}"
                           FontSize="18" FontWeight="SemiBold"
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <Border Background="#AAFFFFFF" CornerRadius="5,5,0,0"
                        Height="150" Width="150"
                        BorderBrush="Silver" BorderThickness="2">
                    <Image Source="/Resources/Images/2nd.png" Stretch="Uniform" Margin="10"/>
                </Border>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" >
                <TextBlock Text="{Binding FirstPlacePlayerName}"
                           FontSize="22" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <Border Background="#AAFFFFFF" CornerRadius="5,5,0,0"
                        Height="200" Width="150"
                        BorderBrush="Goldenrod" BorderThickness="3">
                    <Image Source="/Resources/Images/1st.png" Stretch="Uniform" Margin="10"/>
                </Border>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" >
                <TextBlock Text="{Binding ThirdPlacePlayerName}"
                           FontSize="16" FontWeight="SemiBold"
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <Border Background="#AAFFFFFF" CornerRadius="5,5,0,0"
                        Height="100" Width="150"
                        BorderBrush="#CD7F32" BorderThickness="2">
                    <Image Source="/Resources/Images/3rd.png" Stretch="Uniform" Margin="10"/>
                </Border>
            </StackPanel>

        </StackPanel>
        <Button Grid.Row="3"
                Content="{x:Static language:Lang.winnersScreenBtnExit}" 
                Command="{Binding ExitCommand}"
                Style="{StaticResource JoinButton}" 
                FontSize="20" Height="30"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"
                MinWidth="100"/>

    </Grid>
</Window>