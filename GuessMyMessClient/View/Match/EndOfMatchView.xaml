<Window x:Class="GuessMyMessClient.View.Match.EndOfMatchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.Match"
        mc:Ignorable="d"
        Title="EndOfMatchView" Height="450" Width="800"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Match"
        d:DataContext="{d:DesignInstance Type=vm:EndOfMatchViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock 
    Text="{x:Static language:Lang.winnersScreenLbTitleEndMatch}"
    FontSize="30" 
    FontWeight="Bold"
    HorizontalAlignment="Center"
    Margin="0,41,0,0"
    VerticalAlignment="Top"/>

        <TextBlock 
    FontSize="20" 
    HorizontalAlignment="Left"
    Margin="286,86,0,0"
    VerticalAlignment="Top">
        <Run Text="{x:Static language:Lang.winnersScreenLbCongrats}"/>
        <Run Text=":"/>
        </TextBlock>

        <TextBlock 
Text=""
FontSize="20" 
FontWeight="SemiBold"
HorizontalAlignment="Center"
Margin="0,41,0,0"
VerticalAlignment="Top"/>
        <Label Content="" 
Style="{StaticResource TextBlock}" Margin="185,230,455,72"/>
        <Label Content="" 
Style="{StaticResource TextBlock}" Margin="454,257,186,72"/>
        <Label Content="" 
Style="{StaticResource TextBlock}" Margin="326,176,314,72"/>

        <Label Content="1" 
       Style="{StaticResource PodiumNumberStyle}" 
       Margin="326,112,314,135"/>
        <Label Content="2" 
       Style="{StaticResource PodiumNumberStyle}" 
       Margin="185,197,455,105"/>
        <Label Content="3" 
       Style="{StaticResource PodiumNumberStyle}" 
       Margin="454,235,186,94"/>

        <Button 
Content="{x:Static language:Lang.winnersScreenBtnExit}" 
Style="{StaticResource JoinButton}" 
FontSize="20"
VerticalAlignment="Top" Margin="353,381,353,0" Height="30"/>



    </Grid>
</Window>
