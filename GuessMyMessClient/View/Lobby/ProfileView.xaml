<UserControl x:Class="GuessMyMessClient.View.Lobby.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GuessMyMessClient.View.Lobby"
             mc:Ignorable="d"
             xmlns:language="clr-namespace:GuessMyMessClient.Properties.Langs"
             xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Lobby"
             d:DataContext="{d:DesignInstance Type=vm:ProfileViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="550" d:DesignWidth="350">

    <Border Background="White" 
            BorderBrush="#FF42A5F5" 
            BorderThickness="3" 
            CornerRadius="20" 
            Padding="20">
        
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.4" BlurRadius="20"/>
        </Border.Effect>

        <StackPanel>
            
            <Border Style="{StaticResource PopupTitleBorder}">
                <TextBlock Text="{x:Static language:Lang.editProfileLbMyProfile}" 
                           Style="{StaticResource PopupTitleText}"/>
            </Border>

            <Border Style="{StaticResource PopupSubtitleBorder}">
                <TextBlock Text="{x:Static language:Lang.globalLbName}" Style="{StaticResource PopupSubtitleText}"/>
            </Border>
            <TextBox Text="{Binding FirstName}" 
                     Style="{StaticResource InputField}"
                     IsReadOnly="False" 
                     Width="280" Height="40" Margin="0,0,0,5"/>

            <Border Style="{StaticResource PopupSubtitleBorder}">
                <TextBlock Text="{x:Static language:Lang.globalLbLastName}" Style="{StaticResource PopupSubtitleText}"/>
            </Border>
            <TextBox Text="{Binding LastName}" 
                     Style="{StaticResource InputField}"
                     IsReadOnly="False" 
                     Width="280" Height="40" Margin="0,0,0,5"/>

            <Border Style="{StaticResource PopupSubtitleBorder}">
                <TextBlock Text="{x:Static language:Lang.globalLbEmail}" Style="{StaticResource PopupSubtitleText}"/>
            </Border>
            <TextBox Text="{Binding Email, Mode=OneWay}" 
                     Style="{StaticResource InputField}"
                     IsReadOnly="True" 
                     Width="280" Height="40" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,20">
                <RadioButton GroupName="ProfileGender" IsChecked="{Binding IsMale, Mode=OneWay}" 
                             Style="{StaticResource GenderRadioButtonStyle}" IsEnabled="False" ToolTip="{x:Static language:Lang.globalCmbMale}">
                    <Image Source="/Resources/Images/male.png" Height="25"/>
                </RadioButton>
                
                <RadioButton Content="{x:Static language:Lang.globalCmbNonBinary}" 
                             GroupName="ProfileGender" IsChecked="{Binding IsNonBinary, Mode=OneWay}" 
                             Style="{StaticResource GenderRadioButtonStyle}" Margin="5,0" IsEnabled="False"
                             FontFamily="Arial Rounded MT Bold" FontSize="12" FontWeight="Bold"/>

                <RadioButton GroupName="ProfileGender" IsChecked="{Binding IsFemale, Mode=OneWay}" 
                             Style="{StaticResource GenderRadioButtonStyle}" IsEnabled="False" ToolTip="{x:Static language:Lang.globalCmbFemale}">
                    <Image Source="/Resources/Images/female.png" Height="25"/>
                </RadioButton>
            </StackPanel>

            <Button Content="{x:Static language:Lang.editProfileBtnChangeEmail}" 
                    Style="{StaticResource YellowButton}" 
                    Command="{Binding ChangeEmailCommand}" 
                    Height="35" Width="230" Margin="0,0,0,10" FontSize="16"/>

            <Button Content="{x:Static language:Lang.editProfileBtnChangePsw}" 
                    Style="{StaticResource BlueButton}" 
                    Command="{Binding ChangePasswordCommand}" 
                    Height="35" Width="230" Margin="0,0,0,10" FontSize="16"/>
            
            <Button Content="{x:Static language:Lang.editProfileBtnSaveChanges}"
                    Style="{StaticResource GreenButton}"
                    Command="{Binding SaveProfileCommand}" 
                    Height="35" Width="230" FontSize="16"/>

        </StackPanel>
    </Border>
</UserControl>