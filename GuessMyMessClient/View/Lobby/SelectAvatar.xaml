<Window x:Class="GuessMyMessClient.View.Lobby.SelectAvatar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Lobby"
        xmlns:local="clr-namespace:GuessMyMessClient.View.Lobby"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs"
        mc:Ignorable="d"
        Title="Select Avatar" Height="550" Width="900"
        d:DataContext="{d:DesignInstance Type=vm:SelectAvatarViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent">

    <Border CornerRadius="15" Background="#FFFFFF" BorderBrush="#000000" BorderThickness="2" Margin="0,0,50,50">
        <StackPanel Margin="20">
            <TextBlock Text="{x:Static language:Lang.editAvatarLbSelect}"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <Grid Name="AvatarGrid" Margin="10,0" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="0" Grid.Column="1" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="0" Grid.Column="2" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="0" Grid.Column="3" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="0" Grid.Column="4" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>

                <Border Grid.Row="1" Grid.Column="0" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="1" Grid.Column="1" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="1" Grid.Column="2" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="1" Grid.Column="3" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
                <Border Grid.Row="1" Grid.Column="4" Height="80" Width="80" CornerRadius="40" Margin="10" BorderBrush="Gray" BorderThickness="2"/>
            </Grid>

            <Button Content="{x:Static language:Lang.globalBtnConfirm}" 
                    Style="{StaticResource ConfirmButton}" 
                    Margin="0,20,0,0" Width="150" Height="40" Click="Button_Click"/>
        </StackPanel>
    </Border>
</Window>