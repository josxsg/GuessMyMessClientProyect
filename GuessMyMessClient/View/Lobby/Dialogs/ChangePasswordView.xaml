<Window x:Class="GuessMyMessClient.View.Lobby.Dialogs.ChangePasswordView" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:GuessMyMessClient.Properties.Langs"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Lobby.Dialogs" 
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:ChangePasswordViewModel, IsDesignTimeCreatable=True}"
        Style="{StaticResource DialogWindowStyle}"
        WindowStartupLocation="CenterScreen" Height="350" Width="450"> <Border Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="10">
        <Grid Margin="15">
            <Button Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <TextBlock Text="{x:Static language:Lang.changePswLbChangPsw}" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           FontFamily="Arial Rounded MT Bold"/>

                <TextBlock Text="{x:Static language:Lang.changePswLbWriteNewPsw}" 
                           Margin="0,20,0,5" 
                           HorizontalAlignment="Center"
                           FontFamily="Arial Rounded MT Bold"/>
                
                <PasswordBox x:Name="NewPasswordBox" 
                             Style="{StaticResource PasswordField}" 
                             Width="300" Height="40"/>

                <TextBlock Text="{x:Static language:Lang.changePswLbConfirmPsw}" 
                           Margin="0,10,0,5" 
                           HorizontalAlignment="Center"
                           FontFamily="Arial Rounded MT Bold"/>
                
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Style="{StaticResource PasswordField}" 
                             Width="300" Height="40"/>

                <Button Content="{x:Static language:Lang.globalBtnConfirm}"
                        Style="{StaticResource BlueButton}"
                        Command="{Binding ConfirmCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Margin="0,20,0,0"
                        Width="150" Height="40"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>