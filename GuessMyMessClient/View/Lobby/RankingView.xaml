<UserControl x:Class="GuessMyMessClient.View.Lobby.RankingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:language="clr-namespace:GuessMyMessClient.Properties.Langs"
             xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.Lobby"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:RankingViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="500" d:DesignWidth="700">

    <UserControl.Resources>
        <Style x:Key="RankingItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="#DDD" 
                                BorderThickness="0,0,0,1" 
                                CornerRadius="8">
                            <GridViewRowPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsCurrentUser}" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFF9C4"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FFC107"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </DataTrigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="20" Padding="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.15" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/1st.png" Height="35" Margin="0,0,15,0"/>
                    <TextBlock Text="{x:Static language:Lang.rankingTitle}" 
                               FontSize="28" FontWeight="Bold" 
                               FontFamily="Arial Rounded MT Bold" 
                               Foreground="#FF1565C0"/>
                </StackPanel>

                <Button Grid.Column="1" Command="{Binding RefreshCommand}" 
                        Style="{StaticResource BlueIconButton}" 
                        Width="40" Height="40" ToolTip="{x:Static language:Lang.rankingBtnRefresh}">
                    <TextBlock Text="↻" FontSize="22" Foreground="White" FontWeight="Bold" Margin="0,-2,0,0"/>
                </Button>
            </Grid>

            <ListView Grid.Row="1" ItemsSource="{Binding RankingList}" 
                      ItemContainerStyle="{StaticResource RankingItemStyle}"
                      BorderThickness="0" Background="Transparent" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="{x:Static language:Lang.rankingLbRank}" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Rank}" 
                                               FontFamily="Arial Rounded MT Bold" 
                                               FontSize="16" Foreground="#555" 
                                               HorizontalAlignment="Center" FontWeight="Bold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="{x:Static language:Lang.rankingLbUser}" Width="350">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Username}" 
                                               FontFamily="Arial" 
                                               FontSize="16" Foreground="#333" 
                                               FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="{x:Static language:Lang.rankingLbScore}" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TotalScore}" 
                                               FontFamily="Arial Rounded MT Bold" 
                                               FontSize="16" Foreground="#2ECC71" 
                                               FontWeight="Bold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Border>
</UserControl>