<Window x:Class="GuessMyMessClient.View.Lobby.FriendProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:GuessMyMessClient.Properties.Langs"
        mc:Ignorable="d"
        Title="Perfil de Amigo" Height="600" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None">

    <Window.Resources>
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF42A5F5"/>
            <Setter Property="Margin" Value="0,10,0,2"/>
        </Style>

        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="10,0,0,5"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            BorderBrush="#FF42A5F5" 
            BorderThickness="3" 
            CornerRadius="20" 
            Padding="25">

        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="Gray" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static language:Lang.friendProfileLbTitle}" 
                               FontFamily="Arial Rounded MT Bold" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="#FF1565C0"
                               Margin="0,0,6,0"/>

                    <TextBlock Text="{Binding UsernameTitle}" 
                               FontFamily="Arial Rounded MT Bold" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="#FF1565C0"/>
                </StackPanel>

                <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                        Content="✕" FontSize="18" FontWeight="Bold"
                        Background="Transparent" BorderThickness="0" Foreground="#999"
                        Cursor="Hand" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="{x:Static language:Lang.globalLbName}" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding FirstName}" Style="{StaticResource ValueTextStyle}"/>

                    <TextBlock Text="{x:Static language:Lang.globalLbLastName}" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding LastName}" Style="{StaticResource ValueTextStyle}"/>

                    <TextBlock Text="{x:Static language:Lang.globalLbEmail}" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding Email}" Style="{StaticResource ValueTextStyle}"/>

                    <TextBlock Text="{x:Static language:Lang.globalCmbGender}" Style="{StaticResource LabelTextStyle}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                        <RadioButton GroupName="FriendGender" IsChecked="{Binding IsMale, Mode=OneWay}" 
                                     Style="{StaticResource GenderRadioButtonStyle}" IsEnabled="False" 
                                     ToolTip="{x:Static language:Lang.globalCmbMale}">
                            <Image Source="/Resources/Images/male.png" Height="25"/>
                        </RadioButton>

                        <RadioButton Content="{x:Static language:Lang.globalCmbNonBinary}" 
                                     GroupName="FriendGender" IsChecked="{Binding IsNonBinary, Mode=OneWay}" 
                                     Style="{StaticResource GenderRadioButtonStyle}" Margin="5,0" IsEnabled="False"
                                     FontFamily="Arial Rounded MT Bold" FontSize="12" FontWeight="Bold"/>

                        <RadioButton GroupName="FriendGender" IsChecked="{Binding IsFemale, Mode=OneWay}" 
                                     Style="{StaticResource GenderRadioButtonStyle}" IsEnabled="False" 
                                     ToolTip="{x:Static language:Lang.globalCmbFemale}">
                            <Image Source="/Resources/Images/female.png" Height="25"/>
                        </RadioButton>
                    </StackPanel>

                    <Separator Margin="0,15" Background="#EEE"/>

                    <TextBlock Text="{x:Static language:Lang.profileLbSocialMedia}" 
                               HorizontalAlignment="Center"
                               FontFamily="Arial Rounded MT Bold" 
                               FontSize="16" Foreground="#FF42A5F5" Margin="0,0,0,10"/>

                    <ItemsControl ItemsSource="{Binding SocialNetworks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" CornerRadius="10" Margin="0,4" Padding="8,5" BorderBrush="#F0F0F0" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding IconPath}" Height="28" Width="28" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <TextBlock Grid.Column="1" Text="{Binding DisplayValue}" 
                                                   VerticalAlignment="Center" Margin="10,0,0,0"
                                                   FontFamily="Arial Rounded MT Bold" FontSize="14"
                                                   Foreground="{Binding TextColor}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" Content="{x:Static language:Lang.globalBtnClose}" 
                    Height="40" Width="150" Margin="0,15,0,0"
                    Style="{StaticResource BlueButton}"
                    Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>