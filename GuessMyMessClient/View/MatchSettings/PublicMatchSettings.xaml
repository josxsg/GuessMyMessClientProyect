<Window x:Class="GuessMyMessClient.View.MatchSettings.PublicMatchSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.MatchSettings"
        mc:Ignorable="d"
        Title="PublicMatchSettings" Height="550" Width="900"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.MatchSettings"
        d:DataContext="{d:DesignInstance Type=vm:PublicMatchSettings, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock 
            Text="{x:Static language:Lang.createGameLbSettings}"
            FontSize="30" 
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,41,0,0"
            VerticalAlignment="Top"/>

        <Border Background="#F0F0F0" CornerRadius="12" Padding="5" Margin="89,92,89,0" Height="52" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" 
                        Content="{x:Static language:Lang.playMenuBtnPublicMatches}" 
                        Style="{StaticResource SelectedTabButton}" 
                        Margin="0,0,2,0"/>

                <Button Grid.Column="1" 
                        Content="{x:Static language:Lang.playMenuBtnPrivateMatches}" 
                        Style="{StaticResource TabButton}" 
                        Margin="2,0,0,0"/>
            </Grid>
        </Border>

        <Grid Margin="108,170,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{x:Static language:Lang.globalLbName}"
                       FontSize="24" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Column="1"
                     Width="476"
                     Height="39"
                     Margin="20,0,0,0"
                     Style="{StaticResource TextBox}"/>
        </Grid>

    </Grid>
</Window>