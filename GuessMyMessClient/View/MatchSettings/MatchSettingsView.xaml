<Window x:Class="GuessMyMessClient.View.MatchSettings.MatchSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMyMessClient.View.MatchSettings"
        mc:Ignorable="d"
        Title="MatchSettings"
        Height="600" Width="950"
        xmlns:vm="clr-namespace:GuessMyMessClient.ViewModel.MatchSettings"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" d:DataContext="{d:DesignInstance Type=vm:MatchSettingsViewModel, IsDesignTimeCreatable=True}"
        xmlns:language ="clr-namespace:GuessMyMessClient.Properties.Langs">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.jpeg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Content="←" 
                Style="{StaticResource ReturnButtonStyle}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="15,15,0,0"
                Command="{Binding ReturnCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                ToolTip="{x:Static language:Lang.globalBtnReturn}"/>
        <TextBlock
                Text="{x:Static language:Lang.createGameLbSettings}"
                FontSize="30"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,66,0,0"/>

        <Border Background="#F0F0F0"
                CornerRadius="12"
                Padding="5"
                Height="52"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,136,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="{x:Static language:Lang.playMenuBtnPublicMatches}"
                        Command="{Binding SetMatchTypeCommand}" CommandParameter="Public"
                        Margin="0,0,2,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPublicMatch}" Value="True">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1"
                        Content="{x:Static language:Lang.playMenuBtnPrivateMatches}"
                        Command="{Binding SetMatchTypeCommand}" CommandParameter="Private"
                        Margin="2,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPublicMatch}" Value="False">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <TextBlock
                Text="{x:Static language:Lang.globalLbName}"
                FontSize="24"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="185,231,0,0"
                Visibility="{Binding IsPublicMatch, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <TextBox
                Text="{Binding MatchName}"
                Height="39"
                Width="450"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="299,227,0,0" Style="{StaticResource TextBox}"
                Visibility="{Binding IsPublicMatch, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <TextBlock
                Text="{x:Static language:Lang.createGameLbMaxPlayers}"
                FontSize="24"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="185,310,0,0"/>
        <ComboBox
                ItemsSource="{Binding AvailablePlayerCounts}"
                SelectedItem="{Binding MaxPlayers}"
                Height="39"
                Width="150"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="375,310,0,0" 
                Style="{StaticResource ComboBoxStyle}"/>

        <TextBlock
                Text="{x:Static language:Lang.createGameLbRounds}"
                FontSize="24"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="549,314,0,0"/>
        <ComboBox
                ItemsSource="{Binding AvailableRoundCounts}"
                SelectedItem="{Binding Rounds}"
                Height="39"
                Width="150"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="637,310,0,0" 
                Style="{StaticResource ComboBoxStyle}"/>

        <TextBlock
                Text="{x:Static language:Lang.globalLbDifficulty}"
                FontSize="24"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="185,399,0,0"/>
        <ComboBox
                ItemsSource="{Binding AvailableDifficulties}"
                SelectedItem="{Binding SelectedDifficulty}"
                DisplayMemberPath="Name" 
                Width="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="325,394,0,0" Height="40"
                Style="{StaticResource ComboBoxStyle}"/>

        <Button Content="{x:Static language:Lang.createGameBtnCreate}"
                Command="{Binding CreateMatchCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Style="{StaticResource JoinButton}"
                FontSize="30"
                Height="41"
                Width="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,480,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
        </StackPanel>

    </Grid>
</Window>